<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/grey"
    tools:context="com.example.imtisal.finalprojectv5.LoginFragment">



    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/signBut"
        android:text="Create new account?"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#4c4c4c"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/loginBut"
        android:alpha="0.35"
        android:textStyle="bold"
        android:text="Log In"
        android:textColor="#000000"
        android:layout_above="@+id/signBut"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit2"
       android:hint="Password"
        android:inputType="textPassword"
        android:layout_above="@+id/loginBut"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit1"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/edit2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/bot_logo"
        android:layout_marginLeft="50dp"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/white_user"
        android:layout_alignTop="@+id/edit1"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/white_key"
        android:layout_alignTop="@+id/edit2"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView4" />

</RelativeLayout>
