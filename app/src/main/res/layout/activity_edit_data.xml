<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/db"
    tools:context="com.example.imtisal.finalprojectv5.EditData">

    <Button
        android:text="Change Booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/btnChangeBook"
        android:layout_below="@+id/btnDeleteBook"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:alpha="0.30"
        android:background="#4c4c4c"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <Button
        android:text="Book More Tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/btnBookMore"
        android:layout_below="@+id/btnSearchBook"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:alpha="0.35"
        android:background="#4c4c4c"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <Button
        android:text="Delete Booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeleteBook"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/btnBookMore"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:alpha="0.35"
        android:background="#4c4c4c"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/search_white"
        android:layout_alignTop="@+id/btnSearchBook"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView13"
        android:layout_above="@+id/btnBookMore" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ticket_icon"
        android:layout_alignTop="@+id/btnBookMore"
        android:id="@+id/imageView17" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/delete_icon"
        android:layout_alignTop="@+id/btnDeleteBook"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView18" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/change"
        android:layout_alignTop="@+id/btnChangeBook"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView19" />

    <Button
        android:layout_marginLeft="50dp"
        android:text="Search Booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:id="@+id/btnSearchBook"
        android:alpha="0.35"
        android:background="#4c4c4c"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
